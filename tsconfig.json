{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./app/*"],
			"boot/*": ["./boot/*"],
			"config/*": ["./config/*"]
		}
	},
	"lib": ["es2015"]
}
